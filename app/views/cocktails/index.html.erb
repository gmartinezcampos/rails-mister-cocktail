<div class="home-banner">
  <h1><span id="banner-typed-text"></span></h1>
</div>


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Create a Cocktail</h4>
      </div>
      <div class="modal-body">
        <%= form_for @cocktail do |f| %>
        <div class="form-group form-class justify-content-center">
            <%= f.text_field :name, class:"form-control input", placeholder: "Cocktail's name" %>
            <%= f.file_field :photo, class:"upload-button justify-content-center" %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit class:"btn btn-default submit" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div class="wrapper main-wrapper">
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>');">
            <div class="card-description">
              <h3><%= link_to cocktail.name, cocktail_path(cocktail), class:"cocktail-list-link" %>
              </h3>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

