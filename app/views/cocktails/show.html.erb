<div class="wrapper main-page">
  <div class="container">
    <div class="main-flex-box">
      <div class="flex-content">

        <%= link_to '< All cocktails', cocktails_path, class: "testing" %>
<!--         <a href="/cocktails" class="Cocktail_close  t-h6 is-active">
          <span class="Cocktail_closeText">All cocktails</span>
        </a> -->
        <div class="flex-details">
          <h3 class="Cocktail_title"><%= @cocktail.name %></h3>
          <h4>Ingredients</h5>
          <% @cocktail.doses.each do |dose| %>
            <ul class="list-unstyled tex">
              <li>
                <p><%= dose.ingredient.name %>
                <%= link_to dose_path(dose), method: :delete do %>
                    <i class="fas fa-times icon"></i>
                <% end %>
                </p>
              </li>
            <% end %>
            </ul>
              <%= simple_form_for @dose do |f| %>
            <div class="form-group">
              <%= f.input :description, class:"form-control" %>
              <%= f.association :ingredient, class:"form-control" %>
              <%= f.hidden_field :cocktail_id, value: @cocktail.id %>
              <%= f.submit class:"btn btn-default" %>
            </div>
          <% end %>
          <p><%= link_to "delete cocktail", cocktail_path(@cocktail), class: "testing", method: :delete %></p>
        </div>
      </div>
      <div class="flex-content-image" style="background-image: url('<%= cl_image_path @cocktail.photo %>');">
      </div>
    </div>
  </div>
</div>
