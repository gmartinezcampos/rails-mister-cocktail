<div class="wrapper">
  <div class="container">
    <div class="main-flex-box">
      <div class="flex-content">
        <a href="/cocktails" class="Cocktail__close  t-h6 is-active">
          <span class="Cocktail__closeText">All cocktails</span>
        </a>
        <div class="flex-details">
          <h3 class="Cocktail_title"><%= @cocktail.name %></h3>
          <% @cocktail.doses.each do |dose| %>
          <h5>Ingredients</h5>
            <ul class="list-unstyled tex">
              <li>
                <%= dose.ingredient.name %>
                <%= link_to dose_path(dose), method: :delete do %>
                    <i class="fas fa-times icon"></i>
                <% end %>
              </li>
            <% end %>
            </ul>
          <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class:"cocktail-list-link" %>
        </div>
      </div>
      <div class="flex-content-image">
      </div>
    </div>
  </div>
</div>
